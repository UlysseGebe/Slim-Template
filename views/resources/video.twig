{% include('partial/header.twig') %}

<div class="container">
    <h1>Vidéo</h1>
    <form method="post">
        <div class="form-group">
            <label for="name">Nom de la vidéo:</label>
            <input type="name" class="form-control" placeholder="Entrer catégorie" name="name">
        </div>
        <div class="form-group">
            <label for="categorie">Catégorie de la vidéo:</label>
            <select class="form-control" name="categorie">
                <option selected>Liste des catégorie disponible</option>
                {% for _categorie in categories %}
                    {% if _categorie.categorie_name != 'Home' %}
                        <option value="{{ _categorie.categorie_name }}">{{ _categorie.categorie_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="fallback">FallBack de la vidéo:</label>
            <input type="text" class="form-control" placeholder="Entrer une légende" name="fallback">
        </div>
        <div class="form-group">
            <label for="videoToUpload">Poster de la vidéo:</label>
            <input type="file" class="form-control" name="videoToUpload">
        </div>
        <div class="form-group">
            <label for="imageToUpload">Lien de la vidéo:</label>
            <input type="file" class="form-control" name="imageToUpload">
        </div>
        <div class="form-group">
            <label for="description">Description de la vidéo:</label>
            <textarea class="form-control" name="description"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        <div class="row" style="text-align: center; color: {{ color }};">{{ message }}</div>
    </form>
</div>

{% include('partial/footer.twig') %}